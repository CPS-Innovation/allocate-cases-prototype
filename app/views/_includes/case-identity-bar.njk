{% set identityTitle %}
  <span class="govuk-!-margin-right-1">{{_case.reference}}</span>
  <b class="govuk-!-margin-right-1">
    {{_case.defendants[0].firstName}} {{_case.defendants[0].lastName}} 
    {% if _case.defendants.length > 1 %}
      and {{_case.defendants.length - 1}} more
    {% endif %}
  </b>
  {{ govukTag({
    text: _case.priority,
    classes: _case.priority | priorityTagClass
  }) }}
{% endset %}
{{ appIdentityBar({
  title: {
    html: identityTitle
  },
  menus: [{
    items: [{
      text: 'Review',
      action: '#'
    }]
  } if 1==2]
})}}